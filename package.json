{
  "name": "atyan-web",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "astro": "astro",
    "prepare": "husky && panda codegen",
    "api": "cd api && bun run",
    "gen:types": "bun microcms-typescript schemas src/types/cms.ts",
    "dev": "bun dotenvx run -- bun astro dev",
    "start": "bun astro dev",
    "build": "bun astro build && bunx cpx \"api/**\" dist/functions && bunx cpx api/wrangler.toml dist/ && bunx rimraf dist/functions/node_modules",
    "preview": "bun astro preview",
    "clean": "bunx rimraf ./node_modules ./.astro ./dist ./panda",
    "check": "bun astro check && bunx rimraf ./dist ./api/dist && bun tsc -b && bunx rimraf ./dist ./api/dist && bun typo && bun lint",
    "lint": "eslint",
    "typo": "cspell \"./src/**\" \"./scripts/**\" --gitignore"
  },
  "dependencies": {
    "@ark-ui/react": "^4.6.0",
    "@astrojs/check": "^0.9.4",
    "@astrojs/partytown": "^2.1.3",
    "@astrojs/react": "^4.1.2",
    "@astrojs/sitemap": "^3.2.1",
    "@auth0/auth0-spa-js": "^2.1.3",
    "@fontsource/m-plus-rounded-1c": "^5.1.1",
    "@hookform/resolvers": "^3.9.1",
    "@iconify-json/material-symbols": "^1.2.12",
    "@iconify-json/mdi": "^1.2.2",
    "@iconify/react": "^5.2.0",
    "@marsidev/react-turnstile": "^1.1.0",
    "astro": "^5.1.2",
    "astro-compress": "^2.3.5",
    "astro-embed": "^0.9.0",
    "astro-icon": "^1.1.5",
    "astro-layouts": "^1.0.0",
    "astro-meta-tags": "^0.3.1",
    "astro-seo": "^0.8.4",
    "atyan-web-api": "workspace:api",
    "cheerio": "^1.0.0",
    "envsafe": "^2.0.3",
    "hono": "^4.6.15",
    "microcms-js-sdk": "^3.1.2",
    "neverthrow": "^8.1.1",
    "pandacss-animate": "^1.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.54.2",
    "react-svg": "^16.2.0",
    "swr": "^2.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@dotenvx/dotenvx": "^1.32.0",
    "@eslint-react/eslint-plugin": "^1.23.1",
    "@pandacss/dev": "^0.51.1",
    "@pandacss/eslint-plugin": "^0.2.3",
    "cspell": "^8.17.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-format": "^0.1.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "workspaces": ["api"]
}
